const CACHE = 'fitplan-v1';
self.addEventListener('install', e => {
  e.waitUntil(caches.open(CACHE).then(c => c.addAll(['/', '/index.html'])));
});
self.addEventListener('fetch', e => {
  e.respondWith(caches.match(e.request).then(r => r || fetch(e.request)));
});
import { NavLink, Routes, Route } from 'react-router-dom'

const Tab = ({to, children}) => (
  <NavLink to={to} style={({isActive})=>({ padding:12, textDecoration:'none', fontWeight:isActive?600:400 })}>
    {children}
  </NavLink>
)

export default function App(){
  return (
    <div style={{maxWidth:900, margin:'0 auto', padding:16}}>
      <h2>Fit Planner</h2>
      <nav style={{display:'flex', gap:12, borderTop:'1px solid #eee', paddingTop:8}}>
        <Tab to="/">Home</Tab>
        <Tab to="/muscles">Muscle Map</Tab>
        <Tab to="/exercises">Exercises</Tab>
        <Tab to="/recovery">Yoga/Cardio</Tab>
        <Tab to="/recipes">Recipes</Tab>
        <Tab to="/planner">Planner</Tab>
      </nav>
      <Routes>
        <Route path="/" element={<Home/>}/>
        <Route path="/muscles" element={<MuscleMap/>}/>
        <Route path="/exercises" element={<Exercises/>}/>
        <Route path="/recovery" element={<Recovery/>}/>
        <Route path="/recipes" element={<Recipes/>}/>
        <Route path="/planner" element={<Planner/>}/>
      </Routes>
    </div>
  )
}

function Home(){ return <p>Welcome. Log in to sync.</p> }
function Exercises(){ return <p>Exercise list goes here.</p> }
function Recovery(){ return <p>Yoga / cardio sessions.</p> }
function Recipes(){ return <p>Recipe cards + macros.</p> }
function Planner(){ return <p>Calendar/agenda with items.</p> }
